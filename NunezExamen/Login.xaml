<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NunezExamen.Login">
    <ContentPage.Content>
        <StackLayout>

            <Label Text=" Prueba Aplicaciones Moviles  " FontSize="20" HorizontalTextAlignment="Center"/>
            <Image Source="https://www.tecnologias-informacion.com/tipos.jpg"/>

            <Grid VerticalOptions="Center">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Label Text="Usuario" FontSize="18" Grid.Row="0" Grid.Column="0"/>
                <Entry x:Name="txtUsuario" Placeholder="Ingrese Usuario" Grid.Row="0" Grid.Column="1"/>
                <Label Text="Contraseña" FontSize="18" Grid.Row="1" Grid.Column="0"/>
                <Entry x:Name="txtContrasena" Placeholder="Ingrese su conraseña" IsPassword="True" Grid.Row="1" Grid.Column="1"/>
            </Grid>

            <Button x:Name="btnIniciar" Text="Iniciar Sesion" Clicked="btnIniciar_Clicked"/>



        </StackLayout>
    </ContentPage.Content>
</ContentPage>